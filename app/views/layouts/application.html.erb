<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %> ">
  <div id="banner" >
    <%= image_tag('logo.png') %>
    <%= @page_title || 'Depot!' %>
  </div>

  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart %>
      </div>
      <ul>
        <li><span class="time"><%= Time.now.strftime('%X') %></span></li>
        <%= link_to 'Home',:controller => :store, :action => :index  %>
        <li><a href="javascript:void(0);">Questions</a></li>
        <li><a href="javascript:void(0);">News</a></li>
        <li><a href="javascript:void(0);">Contact</a></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>

</body>
</html>
